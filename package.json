{
	"name": "charity-wars",
	"version:": "1.0.0",
	"description": "Etherium smart-contracts for fun charity games.",
	"keywords": [
		"solidity",
		"web3js"
	],
	"homepage": "https://github.com/MareoRaft/charity-wars#readme",
	"config": {
		"networks": {
			"development-cli": {
				"host": "localhost",
				"port": 8545,
				"network_id": "*"
			},
			"development-app": {
				"host": "localhost",
				"port": 7545,
				"network_id": "",
				"from": "0x341FaaE3dF296544c90E12140Df6551964309395"
			}
		}
	},
	"scripts": {
		"start": "cd source/blockchain && ganache-cli & cd source/blockchain && sleep 5 && truffle compile && truffle migrate",
		"test": "cd source/blockchain && truffle test",
		"build": "gulp",
		"serve": "cd build/client && live-server",
		"watch": "npm-watch"
	},
	"watch": {
		"test": {
			"patterns": [
				"package.json",
				"source/blockchain/truffle.js",
				"source/blockchain/contracts",
				"source/blockchain/test"
			],
			"extensions": "sol,js",
			"quiet": true
		}
	},
	"dependencies": {
		"web3": "^1.0.0-beta.36"
	},
	"devDependencies": {
		"browserify": "^16.2.3",
		"chai": "^4.2.0",
		"gulp-buffer": "0.0.2",
		"gulp-sourcemaps": "^2.6.4",
		"gulp-tap": "^1.0.1",
		"gulp-uglify": "^3.0.1",
		"gulplog": "^1.0.0",
		"live-server": "^1.2.0",
		"npm-watch": "^0.4.0"
	}
}
